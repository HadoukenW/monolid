---
import { getSanity } from "../lib/api"

const contacts = await getSanity(`*[_type == 'contacts']{
    contacts
}`)
---

<div class="maps__section">
    <h2>Расположение нашего офиса</h2>
    <div class="maps__wrapper">
        <iframe src=`${contacts[0]?.contacts.map}` /> 
    </div>

<style lang="scss">

    .maps__section {
        padding: var(--section-padding) 0 20px;

    }

    h2 {
        font-weight: 700;
        font-size: var(--header-clamp);
        color: var(--headers-primary);
        text-align: center;
        margin-bottom: 40px;
    }
    .maps__wrapper {
        max-width: 1300px;
        margin: 0 auto 50px;
        display: flex;
        justify-content: center;
        iframe {
            width: 100%;
            height: 400px;
            border: none;
        }

    }
</style>