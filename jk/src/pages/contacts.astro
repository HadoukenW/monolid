---
import Header from '../components/Header.astro'
import BaseHead from '../components/BaseHead.astro'

import { Breadcrumbs } from "astro-breadcrumbs";
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Footer from '../components/Footer.astro'
import "../../astro-breadcrumbs-config.scss";
const customCrumbs = [
 {
    text: "Главная",
    href: "/",
  },
  {
    text: "Контакты",
    href: "/contacts/",
  }
]
---
<!doctype html>
<html lang="ru">
    <BaseHead title="Контакты – Monolid - Агентство недвижимости Челябинск" description={SITE_DESCRIPTION}/>
    <body>
        <div class="wrapper">
            <Header />

            <div class="breadcrumbs__container">
                <div class="c-breadcrumbs"><Breadcrumbs crumbs={customCrumbs}>
                    <svg width="12" height="12" slot="separator" >
                        <text x="3" y="12" fill="#6c757d" font-size="18" font-family="Arial" unicode-bidi="embed">•</text>
                      </svg>
                            </Breadcrumbs>
                </div>
            </div>

            <main>
                <section id="ourContacts" aria-labelledby="ourContacts__title">
                    <div class="container">
                        <h1 class="title-h1" id="ourContacts__title">Контакты</h1>

                        <div class="ourContacts__wrapper">
                            
                            <ul>
                                <li>
                                    <div class="icon__wrapper">
